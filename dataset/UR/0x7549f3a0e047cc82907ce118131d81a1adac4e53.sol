contract WirebitsTipJar is Ownable {
  using SafeMath for uint256;

  address public token;
  address public wallet;
  uint256 public feePercent;

  event Tip (
    address indexed _sender,
    address indexed _recipient,
    address indexed _wallet,
    uint256 _total,
    uint256 _amount,
    uint256 _fee,
    uint256 _feePercent,
    string _articleId,
    uint256 _timestamp
  );

  constructor(
    address _token,
    address _wallet,
    uint256 _feePercent
  )
    public
  {
    token = _token;
    wallet = _wallet;
    feePercent = _feePercent;
  }

  function sendTip(
    address _recipient,
    uint256 _tokens,
    string _articleId
  )
    public
    returns (bool)
  {
    uint256 _feeTokens = _tokens.mul(feePercent).div(100);
    uint256 _recipientTokens = _tokens.sub(_feeTokens);

    WirebitsToken _token = WirebitsToken(address(token));
    _token.transferFrom(msg.sender, wallet, _feeTokens);
    _token.transferFrom(msg.sender, _recipient, _recipientTokens);

    emit Tip(
      msg.sender,
      _recipient,
      wallet,
      _tokens,
      _recipientTokens,
      _feeTokens,
      feePercent,
      _articleId,
      block.timestamp
    );

    return true;
  }

  function setWallet(address _wallet) public onlyOwner returns(bool) {
    wallet = _wallet;
    return true;
  }

  function setFeePercent(uint256 _feePercent) public onlyOwner returns(bool) {
    feePercent = _feePercent;
    return true;
  }
}