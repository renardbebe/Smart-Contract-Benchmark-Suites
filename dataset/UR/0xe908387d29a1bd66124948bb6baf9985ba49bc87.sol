    string public constant symbol = "GABA";
    uint8 public constant decimals = 18;
    uint256 internal constant INIT_TOTALSUPPLY = 210000000;
    
     
    constructor (address tokenOwner) public {
        require(tokenOwner != address(0), "GABAToken: the tokenOwner cannot be a zero address");
        owner = tokenOwner;
