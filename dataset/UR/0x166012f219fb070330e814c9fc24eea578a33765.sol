contract Pausable {

    event Pause(uint256 _timestammp);
    event Unpause(uint256 _timestamp);

    bool public paused = false;

     
    modifier whenNotPaused() {
        require(!paused);
        _;
    }

     
    modifier whenPaused() {
        require(paused);
        _;
    }

    
    function _pause() internal {
        require(!paused);
        paused = true;
        emit Pause(now);
    }

     
    function _unpause() internal {
        require(paused);
        paused = false;
        emit Unpause(now);
    }

}

 
