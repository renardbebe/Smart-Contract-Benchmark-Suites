        else if (weiAmount >= 150 ether && weiAmount < 1000 ether) tokenAmount = tokenAmount.mul(60).div(100);


        if (block.timestamp >= 1561334400 && block.timestamp < 1561939200)  tokenAmount = tokenAmount.mul(185).div(100);
        else if (block.timestamp >= 1561939200 && block.timestamp < 1562544000) tokenAmount = tokenAmount.mul(175).div(100);
        else if (block.timestamp >= 1562544000 && block.timestamp < 1563148800) tokenAmount = tokenAmount.mul(165).div(100);
        else if (block.timestamp >= 1563148800 && block.timestamp < 1563753600) tokenAmount = tokenAmount.mul(150).div(100);
